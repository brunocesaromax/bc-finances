{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": [
      "/bc-finances-backend/**"
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "overlapSeconds": 30,
    "drainingSeconds": 30,
    "healthcheckPath": "/actuator/health",
    "sleepApplication": true,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "healthcheckTimeout": 300,
    "restartPolicyMaxRetries": 3
  }
}
