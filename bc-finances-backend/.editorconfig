root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,sql}]
max_line_length = 120

[*.{json,xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml,gradle,.gitignore,Dockerfile}]
indent_size = 2

[*.csv]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{css,html}]
indent_size = 2
max_line_length = 120
