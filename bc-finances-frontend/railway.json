{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "dockerfilePath": "/bc-finances-frontend/Dockerfile",
    "watchPatterns": ["bc-finances-frontend/**"]
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1,
    "overlapSeconds": 10,
    "drainingSeconds": 5
  }
}
