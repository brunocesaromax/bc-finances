{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "watchPatterns": [
      "bc-finances-frontend/**"
    ],
    "dockerfilePath": "/bc-finances-frontend/Dockerfile"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "overlapSeconds": 10,
    "drainingSeconds": 5,
    "healthcheckPath": "/",
    "sleepApplication": false,
    "multiRegionConfig": {
      "us-west2": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "healthcheckTimeout": 30,
    "restartPolicyMaxRetries": 1
  }
}